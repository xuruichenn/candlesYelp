    <div class="container">
        <h1>Edit</h1>
        <form action="/candles/<%= candle._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" name="title" value="<%= candle.title %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="description" value="<%= candle.description %>">
            </div>
            <div class="form-group">
                <label for="scent">Scent Family</label>
                <select class="form-control" id="scent" name="scent">
                    <option disabled>-- CHOOSE BELOW --</option>
                    <option <%= candle.genre==='Floral' ? 'selected' : '' %>>Floral</option>
                    <option <%= candle.genre==='Citrus' ? 'selected' : '' %>>Citrus</option>
                    <option <%= candle.genre==='Woody' ? 'selected' : '' %>>Woody</option>
                    <option <%= candle.genre==='Fruity' ? 'selected' : '' %>>Fruity</option>
                    <option <%= candle.genre==='Fresh & Clean' ? 'selected' : '' %>>Fresh & Clean</option>
                    <option <%= candle.genre==='Sweet & Spicy' ? 'selected' : '' %>>Sweet & Spicy</option>
                </select>
            </div>
            <div class="form-group">
                <label for="origin">Made In</label>
                <input type="text" class="form-control" id="origin" name="origin" value="<%= candle.origin %>" >
            </div>
            <div class="form-group">
                <label for="brand">Brand</label>
                <input type="text" class="form-control" id="brand" name="brand" value="<%= candle.brand %>">
            </div>
            <div class="form-group">
                <label for="image">Link to image</label>
                <input type="text" class="form-control" name="image_link" value="<%= candle.image_link %>">
            </div>
            
              
            
            
            <button type="submit" class="btn btn-Dark">Submit</button>
        </form>
    
    </div>
    
<%- include("partials/footer") %>